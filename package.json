{
  "name": "qk-release",
  "version": "1.0.0",
  "description": "A beautiful javascript tool for quick release",
  "author": "Michael",
  "license": "MIT",
  "files": [
    "lib",
    "bin",
    "CHANGELOG.md"
  ],
  "bin": {
    "qkrelease": "bin/cli.js"
  },
  "scripts": {
    "changelog": "conventional-changelog -i CHANGELOG.md -s --commit-path .",
    "release": "node ./bin/cli.js --skipBuild",
    "format": "prettier --write .",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "node",
    "release"
  ],
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.8",
    "conventional-changelog-cli": "^2.2.2",
    "execa": "^5.1.1",
    "fs": "^0.0.1-security",
    "minimist": "^1.2.5",
    "path": "^0.12.7",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "prompts": "^2.4.2"
  }
}
